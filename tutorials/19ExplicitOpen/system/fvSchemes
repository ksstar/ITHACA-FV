FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSchemes;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

ddtSchemes
{
    default         Euler;
}

gradSchemes
{
    default         Gauss linear;	 //Gauss midPoint;
    grad(p)         Gauss linear;      //Gauss midPoint;
}

divSchemes
{
    default         Gauss linear upwind; //Gauss midPoint;
    /*div(phi,U)      Gauss upwind;
    div(interpolate(U),U)      Gauss upwind;
    div(phi_0,U_0)      Gauss upwind;
    div(phi,U_0)      Gauss upwind;
    div(phi_0,U)      Gauss upwind;
    div(U)      Gauss linear;
    div(U_0)      Gauss linear;
    div(phi_0)      Gauss linear;
    div(U0)      Gauss linear;*/
}

laplacianSchemes
{
    default         Gauss linear orthogonal; //Gauss midPoint orthogonal;
}

interpolationSchemes
{
    default         linear;//midPoint;
}

snGradSchemes
{
    default         orthogonal;
}

fluxRequired
{
    default         yes;
    p;
    //Phi;
}

