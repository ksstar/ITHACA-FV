FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application     pimpleFoam;

startFrom       startTime;

startTime       0;

stopAt          endTime;

endTime         5;

deltaT          0.0005;

writeControl    timeStep;

writeInterval   200;

purgeWrite      0;

writeFormat     ascii;

writePrecision  6;

writeCompression off;

timeFormat      general;

timePrecision   6;

runTimeModifiable true;

adjustTimeStep  off;

maxCo           5;

functions
{
    #includeFunc  flowRatePatch(name=outlet)
    #includeFunc  flowRatePatch(name=inlet1)
    #includeFunc  flowRatePatch(name=inlet2)

    //#includeFunc  mag(U) 
    //#includeFunc  mag(U_rec) 
  
}





