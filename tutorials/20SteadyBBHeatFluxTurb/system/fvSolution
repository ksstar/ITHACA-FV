solvers
{
    /*p
    {
        solver           GAMG;
        tolerance        1e-6;
        relTol           0.1;
        smoother         GaussSeidel;
    }*/

    p
    {

	solver          smoothSolver;
    	smoother        DILU;
    	tolerance       1e-50;
    	maxIter         10;

        //solver          PCG;
        //preconditioner  DIC;
        //tolerance       1e-06;
        //relTol          0.01;
    }

    p_rgh
    {
        solver          PCG;
        preconditioner  DIC;
        tolerance       1e-06;
        relTol          0.01;
    }

    p_rghFinal
    {
        $p_rgh;
        tolerance        1e-6;
        relTol           0.01;
    }

    /*pFinal
    {
        $p;
        tolerance        1e-6;
        relTol           0.01;
    }*/

    "(U|k|epsilon|omega|f|v2|nuTilda|h|T)"
    {
	/*solver          PBiCGStab;
        preconditioner  DILU;
        tolerance       1e-5; //1e-7
        relTol          0.1;*/

	solver          smoothSolver;
    	smoother        DILU;
    	tolerance       1e-50;
    	maxIter         10;
    }

  /*  "(U|k|epsilon|omega|f|v2|nuTilda|h|T)Final"
    {
        $U;
        tolerance       1e-05;
        relTol          0.1;
    }*/
    Phi
    {
        $p;
    }

    Usup
    {
        type            coupled;  // optional, defaults to segregated
        solver          PBiCCCG;
        preconditioner  DILU;
        tolerance       (1e-06 1e-06 1e-06);
        relTol          (0 0 0);
    }
}


potentialFlow
{
    nNonOrthogonalCorrectors 5;
}

PISO
{
    nCorrectors     2;
    nNonOrthogonalCorrectors 0;
    pRefCell        0;
    pRefValue       0.0;
}


